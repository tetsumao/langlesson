-# frozen_string_literal: true
= simple_form_for(@period) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    .row
      .col-lg-5
        = f.input :start_time, as: :time, include_blank: true, ignore_date: true, minute_step: 5, selected: period_string_to_time(@period.start_time)
      .col-lg-2.d-flex.align-items-center.text-center
        %span.mx-auto ï½ž
      .col-lg-5
        = f.input :end_time, as: :time, include_blank: true, ignore_date: true, minute_step: 5, selected: period_string_to_time(@period.end_time)

  .form-actions.text-center
    = f.button :submit, class: 'btn btn-primary'
